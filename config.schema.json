{
  "pluginAlias": "MagicHomeAccessory",
  "pluginType": "accessory",
  "singular": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name",
        "description": "Name of the accessory",
        "default": "MagicHome"
      },
      "ip": {
        "type": "string",
        "title": "IP Address",
        "description": "IP Address of the MagicHome device",
        "default": ""
      },
      "port": {
        "type": "number",
        "title": "Port",
        "description": "Port of the MagicHome device",
        "default": 5577
      },
      "connect_timeout": {
        "type": "number",
        "title": "Connect Timeout",
        "description": "Timeout in milliseconds",
        "default": 1000
      },
      "response_timeout": {
        "type": "number",
        "title": "Response Timeout",
        "description": "Timeout in milliseconds",
        "default": 500
      },
      "command_timeout": {
        "type": "number",
        "title": "Command Timeout",
        "description": "Timeout in milliseconds",
        "default": 100
      },
      "enabled_characteristics": {
        "type": "array",
        "title": "Enabled Characteristics",
        "description": "Characteristics to enable",
        "uniqueItems": true,
        "items": {
          "type": "string",
          "title": "Characteristic",
          "enum": [
            "On",
            "Brightness"
          ]
        }
      }
    }
  }
}