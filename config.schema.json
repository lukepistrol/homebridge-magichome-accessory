{
  "pluginAlias": "MagicHomeAccessory",
  "pluginType": "accessory",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name",
        "description": "Name of the accessory",
        "default": "MagicHome"
      },
      "ip": {
        "type": "string",
        "title": "IP Address",
        "description": "IP Address of the MagicHome device",
        "default": ""
      },
      "timeout": {
        "type": "number",
        "title": "Timeout",
        "description": "Timeout in milliseconds",
        "default": 1000
      },
      "apply_masks": {
        "type": "boolean",
        "title": "Apply Masks",
        "description": "Apply masks to the color values",
        "default": false
      }
    }
  }
}